# Git
.git
.gitignore
.gitattributes

# Python
__pycache__
*.py[cod]
*$py.class
*.so
.Python
*.egg-info/
.eggs/
*.egg
.mypy_cache/
.pytest_cache/
.coverage
htmlcov/
.tox/
.nox/
venv/
.venv/
ENV/
env/

# IDE
.vscode/
.idea/
*.swp
*.swo
*~

# OS
.DS_Store
Thumbs.db

# Logs (don't include in build, mount as volume)
logs/
*.log

# Local data (mount as volumes)
data/
backups/
bots/treasury/.positions.json
bots/twitter/.grok_state.json
bots/data/context_state.json

# Secrets (never include)
.env
*.env
lifeos/config/.env
*.pem
*.key
*.crt
secrets/
