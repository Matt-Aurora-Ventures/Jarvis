# ============================================================================
# Jarvis Buy Tracker Bot - Isolated Container
# ============================================================================
FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# Claude CLI (used by buy-tracker Twitter sentiment poster)
RUN npm install -g @anthropic-ai/claude-code && npm cache clean --force

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install buy tracker specific dependencies
RUN pip install --no-cache-dir \
    python-telegram-bot==21.9 \
    solana==0.36.11 \
    base58==2.1.1 \
    pynacl==1.6.2 \
    bip-utils==2.10.0

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p /app/logs /app/data /root/.lifeos /app/bots/buy_tracker

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# Run buy tracker bot
CMD ["python", "-u", "/app/bots/buy_tracker/bot.py"]
