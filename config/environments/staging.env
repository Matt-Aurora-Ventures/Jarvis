# JARVIS Staging Environment Configuration

# Environment
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
API_TIMEOUT=30

# Database
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:5432/${DB_NAME}
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
DB_POOL_RECYCLE=3600

# Redis
REDIS_URL=redis://${REDIS_HOST}:6379/0
REDIS_ENABLED=true

# LLM Configuration
LLM_PROVIDER=anthropic
LLM_DEFAULT_MODEL=claude-3-haiku
LLM_FALLBACK_PROVIDERS=openai
LLM_DAILY_BUDGET=20.00
LLM_MONTHLY_BUDGET=200.00
LLM_TIMEOUT=60

# Treasury (Paper trading mode)
TREASURY_MODE=paper
MAX_SINGLE_TRADE_USD=1000
MAX_DAILY_VOLUME_USD=10000
MAX_POSITION_SIZE_PERCENT=10

# Security
SESSION_TIMEOUT=7200
IDLE_TIMEOUT=3600
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_WINDOW=60

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.5

# Telegram Bot
TG_RATE_LIMIT_MESSAGES=50
TG_RATE_LIMIT_WINDOW=60

# Feature Flags
FEATURE_TWITTER_BOT=true
FEATURE_TRADING=true
FEATURE_ANALYTICS=true
