# JARVIS Development Environment Configuration

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1
API_TIMEOUT=60

# Database (local)
DATABASE_URL=postgresql+asyncpg://jarvis:jarvis@localhost:5432/jarvis_dev
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=2
DB_POOL_RECYCLE=3600

# Redis (local)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# LLM Configuration
LLM_PROVIDER=anthropic
LLM_DEFAULT_MODEL=claude-3-haiku
LLM_FALLBACK_PROVIDERS=
LLM_DAILY_BUDGET=5.00
LLM_MONTHLY_BUDGET=50.00
LLM_TIMEOUT=30

# Treasury (Paper trading only)
TREASURY_MODE=paper
MAX_SINGLE_TRADE_USD=100
MAX_DAILY_VOLUME_USD=1000
MAX_POSITION_SIZE_PERCENT=10

# Security (relaxed for dev)
SESSION_TIMEOUT=86400
IDLE_TIMEOUT=7200
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Monitoring
METRICS_ENABLED=false
METRICS_PORT=9090
TRACING_ENABLED=false
TRACING_SAMPLE_RATE=1.0

# Telegram Bot
TG_RATE_LIMIT_MESSAGES=100
TG_RATE_LIMIT_WINDOW=60

# Feature Flags
FEATURE_TWITTER_BOT=false
FEATURE_TRADING=true
FEATURE_ANALYTICS=false
