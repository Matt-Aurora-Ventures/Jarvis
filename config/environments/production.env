# JARVIS Production Environment Configuration
# DO NOT commit actual secrets to version control

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=30

# Database
# Use secrets manager for actual values
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:5432/${DB_NAME}
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# Redis
REDIS_URL=redis://${REDIS_HOST}:6379/0
REDIS_ENABLED=true

# LLM Configuration
LLM_PROVIDER=anthropic
LLM_DEFAULT_MODEL=claude-3-sonnet
LLM_FALLBACK_PROVIDERS=openai
LLM_DAILY_BUDGET=100.00
LLM_MONTHLY_BUDGET=2000.00
LLM_TIMEOUT=60

# Treasury (CRITICAL - Use secrets manager)
TREASURY_MODE=live
MAX_SINGLE_TRADE_USD=5000
MAX_DAILY_VOLUME_USD=50000
MAX_POSITION_SIZE_PERCENT=20

# Security
SESSION_TIMEOUT=3600
IDLE_TIMEOUT=1800
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1

# Telegram Bot
# Token from secrets manager
TG_RATE_LIMIT_MESSAGES=30
TG_RATE_LIMIT_WINDOW=60

# Feature Flags
FEATURE_TWITTER_BOT=true
FEATURE_TRADING=true
FEATURE_ANALYTICS=true
