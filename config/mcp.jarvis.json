{
  "log_dir": "data/logs/mcp",
  "servers": [
    {
      "name": "filesystem",
      "enabled": true,
      "autostart": false,
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${JARVIS_ROOT}"
      ],
      "env": {}
    },
    {
      "name": "memory",
      "enabled": true,
      "autostart": false,
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "${JARVIS_ROOT}/data/ai_memory/jarvis-memory.jsonl"
      }
    },
    {
      "name": "sequential-thinking",
      "enabled": true,
      "autostart": false,
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {}
    }
  ]
}
