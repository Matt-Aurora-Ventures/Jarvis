{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["core/**/*.ts", "agents/**/*.ts", "policy/**/*.ts", "artifacts/**/*.ts", "schemas/**/*.ts", "examples/**/*.ts"]
}
