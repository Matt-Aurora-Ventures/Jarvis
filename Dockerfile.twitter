# ============================================================================
# Jarvis Twitter/X Autonomous Bot - Isolated Container
# ============================================================================
FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# Claude CLI (optional fallback for tweet generation)
RUN npm install -g @anthropic-ai/claude-code && npm cache clean --force

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install Twitter-specific dependencies
RUN pip install --no-cache-dir \
    tweepy==4.16.0 \
    python-telegram-bot==21.9

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p /app/logs /app/data /root/.lifeos /app/bots/twitter

# Health check
HEALTHCHECK --interval=60s --timeout=10s --start-period=30s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# Run autonomous X bot
CMD ["python", "-u", "-m", "bots.twitter.run_autonomous"]
