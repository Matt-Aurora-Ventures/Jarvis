{
  "log_dir": "lifeos/logs/mcp",
  "servers": [
    {
      "name": "filesystem",
      "enabled": true,
      "autostart": true,
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${HOME}/Desktop/LifeOS",
        "${HOME}/Documents/Jarvis context"
      ],
      "env": {}
    },
    {
      "name": "memory",
      "enabled": true,
      "autostart": true,
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "${HOME}/Documents/Jarvis context/memory/jarvis-memory.jsonl"
      }
    },
    {
      "name": "obsidian-memory",
      "enabled": true,
      "autostart": true,
      "command": "node",
      "args": [
        "${HOME}/Documents/Jarvis context/mcp-servers/obsidian-memory-mcp/dist/index.js"
      ],
      "env": {
        "MEMORY_DIR": "${HOME}/Documents/Obsidian/LifeOSVault"
      }
    },
    {
      "name": "mcp-obsidian",
      "enabled": true,
      "autostart": true,
      "command": "${HOME}/Documents/Jarvis context/mcp-servers/mcp-obsidian/.venv/bin/python",
      "args": [
        "-m",
        "mcp_obsidian.server"
      ],
      "env": {
        "OBSIDIAN_API_KEY": "SET_OBSIDIAN_API_KEY",
        "OBSIDIAN_HOST": "127.0.0.1",
        "OBSIDIAN_PORT": "27124",
        "OBSIDIAN_VAULT_PATH": "${HOME}/Documents/Obsidian/LifeOSVault"
      }
    },
    {
      "name": "sqlite",
      "enabled": true,
      "autostart": true,
      "command": "node",
      "args": [
        "${HOME}/Documents/Jarvis context/mcp-servers/sqlite-src/dist/sqlite/index.js",
        "--db-path",
        "${HOME}/Documents/Jarvis context/data/sqlite/lifeos.db"
      ],
      "env": {}
    },
    {
      "name": "system-monitor",
      "enabled": true,
      "autostart": true,
      "command": "${HOME}/Documents/Jarvis context/mcp-servers/mcp-monitor/bin/mcp-monitor",
      "args": [],
      "env": {}
    },
    {
      "name": "shell",
      "enabled": true,
      "autostart": true,
      "command": "${HOME}/Documents/Jarvis context/mcp-servers/mcp-shell/node_modules/.bin/mcp-shell-server",
      "args": [],
      "env": {
        "MCP_ALLOWED_ROOT": "${HOME}/Desktop/LifeOS",
        "MCP_LOG_DIR": "${HOME}/Documents/Jarvis context/logs/mcp-shell"
      }
    },
    {
      "name": "puppeteer",
      "enabled": true,
      "autostart": true,
      "command": "node",
      "args": [
        "${HOME}/Documents/Jarvis context/mcp-servers/puppeteer/src/dist/index.js"
      ],
      "env": {
        "PUPPETEER_DATA_DIR": "${HOME}/Documents/Jarvis context/browser-data"
      }
    },
    {
      "name": "youtube-transcript",
      "enabled": true,
      "autostart": true,
      "command": "npx",
      "args": [
        "-y",
        "@sinco-lab/mcp-youtube-transcript"
      ],
      "env": {}
    },
    {
      "name": "sequential-thinking",
      "enabled": true,
      "autostart": true,
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {}
    },
    {
      "name": "git",
      "enabled": true,
      "autostart": true,
      "command": "${HOME}/Documents/Jarvis context/venvs/mcp-git/bin/python",
      "args": [
        "-m",
        "mcp_server_git",
        "--repository",
        "${HOME}/Desktop/LifeOS"
      ],
      "env": {}
    }
  ]
}
