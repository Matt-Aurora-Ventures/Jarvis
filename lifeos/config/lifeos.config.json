{
  "timezone": "America/Costa_Rica",
  "reports": {
    "enabled": true,
    "schedule": {
      "morning": "07:30",
      "afternoon": "15:00"
    }
  },
  "paths": {
    "root": "lifeos",
    "config_dir": "lifeos/config",
    "memory_dir": "lifeos/memory",
    "context_dir": "lifeos/context",
    "reports_dir": "lifeos/reports",
    "logs_dir": "lifeos/logs",
    "models_dir": "lifeos/models",
    "activity_logs_dir": "data/activity_logs"
  },
  "memory": {
    "adaptive_cap": true,
    "target_cap": 200,
    "min_cap": 50,
    "max_cap": 300
  },
  "context": {
    "load_budget_entries": 100,
    "load_budget_docs": 20,
    "load_budget_chars": 12000,
    "include_activity_summary": true
  },
  "passive": {
    "enabled": true,
    "log_interval_seconds": 60,
    "track_keyboard": true,
    "track_mouse": true,
    "track_apps": true,
    "capture_thumbnails": false,
    "thumbnail_interval_seconds": 300,
    "max_idle_before_pause": 600
  },
  "interview": {
    "enabled": true,
    "interval_minutes": 120,
    "notifications": true,
    "smart_questions": false,
    "morning_checkin": "08:00",
    "evening_checkin": "18:00"
  },
  "voice": {
    "enabled": true,
    "mode": "wake-word",
    "fallback_mode": "push-to-talk",
    "engine": "openwakeword",
    "wake_word": "jarvis",
    "wake_word_threshold": 0.6,
    "frame_length": 1280,
    "command_timeout_seconds": 18,
    "phrase_time_limit": 18,
    "max_cpu_load": 4.0,
    "allow_cloud_stt": true,
    "speak_responses": true,
    "speech_voice": "Daniel",
    "chat_greeting": "Hi, I'm here. What do you want me to do?",
    "chat_stop_phrase": "thank you goodbye for now",
    "chat_silence_limit": 60,
    "track_mouse": true
  },
  "hotkeys": {
    "enabled": true,
    "chat_activation": "ctrl+shift+up"
  },
  "providers": {
    "groq": {
      "enabled": true,
      "model": "llama-3.3-70b-versatile",
      "priority": 1
    },
    "gemini": {
      "enabled": true,
      "model": "gemini-2.5-flash",
      "free_tier": true,
      "priority": 2
    },
    "openai": {
      "enabled": "auto",
      "model": "gpt-4o-mini",
      "priority": 3
    },
    "ollama": {
      "enabled": true,
      "model": "qwen2.5:1.5b",
      "base_url": "http://localhost:11434",
      "priority": 4
    }
  },
  "diagnostics": {
    "top_processes": 5
  },
  "research": {
    "allow_web": false
  },
  "observer": {
    "enabled": true,
    "log_keys": true,
    "log_mouse": true,
    "flush_interval": 30
  },
  "safety": {
    "default_mode": "dry-run",
    "require_apply_token": true
  }
}
